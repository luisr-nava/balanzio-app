model Employee {
  id               String    @id @default(uuid())
  fullName         String
  email            String    @unique
  role             String
  hireDate         DateTime?
  salary           Float?
  shopId           String
  address          String?
  createdAt        DateTime  @default(now())
  dni              String?
  emergencyContact String?
  isActive         Boolean   @default(true)
  notes            String?
  phone            String?
  profileImage     String?
  shop             Shop      @relation(fields: [shopId], references: [id])
  sales            Sale[]
}
